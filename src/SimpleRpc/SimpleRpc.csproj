<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <Description>An very simple RPC library.</Description>
        <VersionPrefix>0.0.0.1</VersionPrefix>
        <GenerateDocumentationFile>true</GenerateDocumentationFile>
        <PackageTags>rpc;simplerpc;easyrpc;easy;simple</PackageTags>
        <Authors>Daniil Sokolyuk</Authors>
        
        <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
        <TargetFrameworks>net461;netstandard2.0</TargetFrameworks>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Castle.Core" Version="4.2.1" />
        <PackageReference Include="MessagePack" Version="1.7.3.2" />
        <PackageReference Include="Microsoft.AspNetCore.Http.Abstractions" Version="2.0.1" />
        <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="2.0.0" />
        <PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" Version="2.0.0" />
        <PackageReference Include="Fasterflect.Netstandard" Version="1.0.8" />
    </ItemGroup>

    <ItemGroup Condition=" '$(TargetFramework)' == 'netstandard2.0' ">
        <PackageReference Include="Microsoft.CSharp" Version="4.4.1" />
        <PackageReference Include="System.Net.Http" Version="4.3.3" />
    </ItemGroup>

    <ItemGroup Condition=" '$(TargetFramework)' == 'net461' ">
        <Reference Include="System" />
        <Reference Include="Microsoft.CSharp" />
        <Reference Include="System.Net.Http" />
    </ItemGroup>

    <ItemGroup>
      <Folder Include="Transports\gRPC\" />
    </ItemGroup>

</Project>
